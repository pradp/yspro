<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	<!-- 此配置文件为系统功能配置 -->
<!-- service start -->
	<!-- 系统字典维护 -->
	<bean id="sysCodeService" class="com.imchooser.infoms.service.sys.impl.SysCodeServiceImpl" autowire="byName" />
	<!-- 系统字典类别维护 -->
	<bean id="sysCodeSortService" class="com.imchooser.infoms.service.sys.impl.SysCodeSortServiceImpl" autowire="byName" />
	<!-- 在线用户查询 -->
	<bean id="userOnlineService" class="com.imchooser.infoms.service.sys.impl.UserOnlineServiceImpl" autowire="byName" />
	<!-- 模块功能与开放规则 -->
	<bean id="buttonEnumRuleServiceImpl" parent="txProxyTemplate">
		<property name="target">
			<bean class="com.imchooser.infoms.service.sys.impl.ButtonEnumRuleServiceImpl" autowire="byName" />
		</property>
	</bean>
	<!-- ajax服务，提供给DWR暴露服务 -->
	<bean id="ajaxService" class="com.imchooser.infoms.service.sys.impl.AjaxServiceImpl" autowire="byName" />
	<!-- 字典封装服务 -->
	<bean id="applicationEnumService" class="com.imchooser.infoms.service.sys.impl.ApplicationEnumImpl" autowire="byName" />
	<!-- 属性配置维护 -->
	<bean id="xtpzService" class="com.imchooser.infoms.service.sys.impl.PropertityServiceImpl" autowire="byName" />
	<!-- 部门信息维护 -->
	<bean id="departService" class="com.imchooser.infoms.service.sys.impl.DepartServiceImpl" autowire="byName" />
	<!-- 区域信息维护 -->
	<bean id="areaService" class="com.imchooser.infoms.service.sys.impl.AreaServiceImpl" autowire="byName" />
	<!-- 消息维护 -->
	<bean id="messageService" class="com.imchooser.infoms.service.sys.impl.MessageServiceImpl" autowire="byName" />
	<bean id="messageManagerService" class="com.imchooser.infoms.service.sys.impl.MessageManagerServiceImpl" autowire="byName" />
	<!-- 下级登录用户维护 -->	
	<bean id="myUserService" class="com.imchooser.infoms.service.sys.impl.MyUserServiceImpl" autowire="byName" />
	<!-- 用户操作日志  -->
	<bean id="sysBizLogService" class="com.imchooser.infoms.service.sys.impl.SysBizLogServiceImpl" autowire="byName" />
	<!-- 导入 Excel 服务 -->
	<bean id="excelUserImportService" class="com.imchooser.infoms.service.sys.impl.ExcelUserImportServiceImpl" autowire="byName"></bean>
	<!-- Excel 导入 管理员设置 -->
	<bean id="excelImportAdminSetupService" class="com.imchooser.infoms.service.sys.impl.ExcelImportAdminSetupServiceImpl" autowire="byName"></bean>
	<!-- 统一身份认证服务，装配在IdUserAction -->
	<bean id="uniIdService" class="com.imchooser.infoms.uniid.server.UniIdServiceImpl" autowire="byName"></bean>
	<bean id="localSessionService" class="com.imchooser.infoms.uniid.client.impl.LocalSessionServiceImpl" autowire="byName"></bean>
	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="NodeSessionService"/>
		<property name="service" ref="localSessionService"/>
		<property name="serviceInterface" value="com.imchooser.infoms.uniid.client.LocalSessionService"/>
		<property name="registryPort" value="1199"/>
	</bean>
	<!-- 导入模板设置 -->
	<bean id="excelImprotAdminSetTempService"
	 	class="com.imchooser.infoms.service.sys.impl.ExcelImprotAdminSetTempServiceImpl"
		autowire="byName" />
<!-- service end -->
<!-- action start -->
	<!-- 系统字典维护-->
	<bean id="sysCodeAction" class="com.imchooser.infoms.action.sys.SysCodeAction"
		autowire="byName" scope="prototype" >
		<property name="baseService" ref="sysCodeService"/>
	</bean>
	<!-- 系统字典类别维护-->
	<bean id="sysCodeSortAction" class="com.imchooser.infoms.action.sys.SysCodeSortAction"
		autowire="byName" scope="prototype" >
		<property name="baseService" ref="sysCodeSortService"/>
	</bean>
	<!-- 模块功能与开放规则 -->
	<bean id="buttonEnumRuleAction" class="com.imchooser.infoms.action.sys.ButtonEnumRuleAction"
		autowire="byName" scope="prototype" >
		<property name="baseService" ref="buttonEnumRuleServiceImpl"/>
	</bean>
	<!-- 在线用户查询-->
	<bean id="userOnlineAction" class="com.imchooser.infoms.action.sys.UserOnlineAction"
		autowire="byName" scope="prototype" >
		<property name="baseService" ref="userOnlineService"/>
	</bean>
	<!-- 消息发送 -->
	<bean id="messageAction" class="com.imchooser.infoms.action.sys.MessageAction" autowire="byName" scope="prototype">
		<property name="baseService" ref="messageService"></property>
	</bean>
	<!-- 消息管理 -->
	<bean id="messageManagerAction" class="com.imchooser.infoms.action.sys.MessageManagerAction" autowire="byName" scope="prototype">
		<property name="baseService" ref="messageManagerService"></property>
	</bean>	
	<!-- 系统属性配置 -->	
	<bean id="xtpzAction" class="com.imchooser.infoms.action.sys.PropertityAction" autowire="byName" scope="prototype">
		<property name="baseService" ref="xtpzService"></property>
	</bean>	
	<!-- 部门信息维护 -->	
	<bean id="departAction" class="com.imchooser.infoms.action.sys.DepartAction" autowire="byName" scope="prototype">
		<property name="baseService" ref="departService"></property>
	</bean>
	<!-- 区域信息维护 -->	
	<bean id="areaAction" class="com.imchooser.infoms.action.sys.AreaAction" autowire="byName" scope="prototype">
		<property name="baseService" ref="areaService"></property>
	</bean>
	<!-- 下级登录用户维护 -->	
	<bean id="myUserAction" class="com.imchooser.infoms.action.sys.MyUserAction"
		autowire="byName" scope="prototype" >
		<property name="baseService" ref="myUserService"></property>
	</bean>
	<!-- 用户操作日志  --> 
	<bean id="sysBizLogAction" class="com.imchooser.infoms.action.sys.SysBizLogAction" autowire="byName" scope="prototype">
	    <property name="baseService" ref="sysBizLogService"></property>
	</bean>
	<!-- Excel 导入 -->
	<bean id="excelUserImportAction" class="com.imchooser.infoms.action.sys.ExcelUserImportAction" autowire="byName" scope="prototype">
		<property name="baseService" ref="excelUserImportService"/>
	</bean>
	<!-- Excel 导入管理员设置 -->
	<bean id="excelImportAdminSetupAction" class="com.imchooser.infoms.action.sys.ExcelImportAdminSetupAction" autowire="byName" scope="prototype">
		<property name="baseService" ref="excelImportAdminSetupService"/>
	</bean>
	<!-- 导入模板设置 -->
	<bean id="excelImprotAdminSetTempAction" class="com.imchooser.infoms.action.sys.ExcelImprotAdminSetTempAction" autowire="byName" scope="prototype" >
		<property name="baseService" ref="excelImprotAdminSetTempService"/>
	</bean>
<!-- action end -->
</beans>
