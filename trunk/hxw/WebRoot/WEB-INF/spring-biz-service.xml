			<bean class="com.yszoe.biz.service.impl.ScjcFarmServiceImpl"
				autowire="byName" />
		</property>
	</bean>

	<!-- 定时任务：定时监测任务，过期时更新状态为已过期-->
	<bean id="scjcTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean class="org.springframework.scheduling.quartz.JobDetailBean">
				<property name="jobClass" value="com.yszoe.biz.service.ScjcJob" />
			</bean>
		</property>
		<!-- 每天0点执行 -->
		<property name="cronExpression" value="0 0 0 * * ?" />
		<!-- 指定每天17:03:00执行 <property name="cronExpression" value="0 03 17 * * ?" /> -->
	</bean>
	<!-- 定时器 -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
		autowire="no">
		<property name="triggers">
			<list>
				<ref bean="scjcTrigger" />
			</list>
		</property>
	</bean>
