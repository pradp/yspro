<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:aop="http://www.springframework.org/schema/aop" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  
	<!-- 信息发布栏目管理 -->
	<bean id="cmsSortAction" class="com.yszoe.cms.action.CmsSortAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="cmsSortService"/>
	</bean>
	<!-- 信息发布内容审核 -->
	<bean id="cmsApproveArticleAction" class="com.yszoe.cms.action.CmsApproveArticleAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="cmsApproveArticleService"/>
	</bean>
	<!-- 信息发布内容供稿 -->
	<bean id="cmsMyArticleAction" class="com.yszoe.cms.action.CmsMyArticleAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="cmsMyArticleService"/>
	</bean>
	<!-- 信息发布评论信息管理 -->
	<bean id="cmsApproveCommentAction" class="com.yszoe.cms.action.CmsApproveCommentAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="cmsApproveCommentService"/>
	</bean>
	<!-- 信息发布查看我的评论信息 -->
	<bean id="cmsMyCommentAction" class="com.yszoe.cms.action.CmsMyCommentAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="cmsMyCommentService"/>
	</bean>
	<!-- 信息发布查看我的文章（管理员） -->
	<bean id="cmsAdminArticleAction" class="com.yszoe.cms.action.CmsAdminArticleAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="cmsAdminArticleService"/>
	</bean>
	
	<!-- 专家信息维护 -->
	<bean id="expertqaExpertsAction" class="com.yszoe.biz.action.ExpertqaExpertsAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="expertqaExpertsService"></property>
	</bean>
	<!-- 专家信息自我维护 -->
	<bean id="expertqaExpertsMineAction" class="com.yszoe.biz.action.ExpertqaExpertsMineAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="expertqaExpertsMineService"></property>
	</bean>
	<!-- 管理员问题信息维护 -->
	<bean id="expertqaManage4adminAction" class="com.yszoe.biz.action.ExpertqaAppealAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="expertqaAppealService"></property>
	</bean>
	<!-- 问题信息维护 -->
	<bean id="expertqaAppealaddAction" class="com.yszoe.biz.action.ExpertqaAppealaddAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="expertqaAppealaddService"></property>
	</bean>
	<!-- 专家问题信息维护 -->
	<bean id="expertqaAnswerAction" class="com.yszoe.biz.action.ExpertqaAnswerAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="expertqaAnswerService"></property>
	</bean>
	<!-- 向专家提问 -->
	<bean id="expertqaQuestionAction" class="com.yszoe.biz.action.ExpertqaQuestionAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="expertqaQuestionService"></property>
	</bean>
	<!-- 支持AJAX的action。返回json数据 -->
	<bean id="ajaxBizAction" class="com.yszoe.biz.action.AjaxBizAction" scope="prototype">
		<property name="ajaxBizService" ref="ajaxBizService"/>
	</bean>
	
	<!-- 游客向专家提问 -->
	<bean id="publicquestionAction" class="com.yszoe.biz.action.QuestionAction" scope="prototype" autowire="byName">
		<property name="baseService" ref="questionService"></property>			
	</bean>
	
</beans>
