<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<import resource="classpath:org/codehaus/xfire/spring/xfire.xml" />

	<bean id="articleWSSearch" class="com.ht.article.search.impl.ArticleSearchServiceWSImpl" />

	<bean id="addressingHandler" class="org.codehaus.xfire.addressing.AddressingInHandler" />

	<bean name="articleService" class="org.codehaus.xfire.spring.ServiceBean">
		<property name="serviceBean" ref="articleWSSearch" />
		<property name="serviceClass" value="com.ht.article.search.ArticleSearchService" />
		<property name="inHandlers">
			<list>
				<ref bean="addressingHandler" />
			</list>
		</property>
	</bean>
</beans>