<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="searchArticleServletController" class="com.ht.article.web.SearchArticleServletController">
		<property name="articleSearchService">
			<ref bean="com.ht.article.search.ArticleSearchService" />
		</property>
		<property name="articleManager">
			<ref bean="com.ht.article.service.ArticleManager" />
		</property>
	</bean>

	<bean id="simpleUrlHandlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="interceptors">
			<list>
				<ref bean="paginationContextHandlerServletInterceptor" />
			</list>
		</property>
		<property name="mappings">
			<props>
				<prop key="/search.portal">searchArticleServletController</prop>
			</props>
		</property>
	</bean>
</beans>